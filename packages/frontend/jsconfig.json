{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@backend/*": ["../backend/src/*"],
			"@shared/*": ["./src/../../shared/src/*"],
			"@/*": ["./src/*"],
			"@/components/*": ["./components/*"],
			"@/contexts/*": ["./contexts/*"],
			"@/utils/*": ["./utils/*"],
			"@/hooks/*": ["./hooks/*"],
			"@/layouts/*": ["./layouts/*"],
			"@/plugins/*": ["./plugins/*"],
			"@/styles/*": ["./styles/*"],
			"@/config/*": ["./config/*"],
			"@/queries/*": ["./queries/*"],
			"@/mutations/*": ["./mutations/*"]
		}
	},
	"exclude": ["node_modules", "build"]
}
